{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "VisualEditor0",
      "Effect": "Allow",
      "Action": "s3:GetBucketLocation",
      "Resource": "*"
    },
    {
      "Sid": "VisualEditor3",
      "Effect": "Allow",
      "Action": "s3:HeadBucket",
      "Resource": "*"
    },
    {
      "Sid": "VisualEditor1",
      "Effect": "Allow",
      "Action": "s3:ListAllMyBuckets",
      "Resource": "*"
    },
    {
      "Sid": "ListBucket",
      "Effect": "Allow",
      "Action": "s3:ListBucket",
      "Resource": [
        "arn:aws:s3:::polleuxmonitored"
      ],
      "Condition": {
        "StringEquals": {
          "s3:prefix": [
            "",
            "polleuxlab/",
            "polleuxlab/inputs",
            "polleuxlab/results",
            "polleuxlab/logs",
            "polleuxlab/inputs/",
            "polleuxlab/results/",
            "polleuxlab/logs/"
          ],
          "s3:delimiter": [
            "/"
          ]
        }
      }
    },
    {
      "Sid": "Inputfolderwrite",
      "Effect": "Allow",
      "Action": [
        "s3:PutObject",
        "s3:DeleteObject"
      ],
      "Resource": [
        "arn:aws:s3:::polleuxmonitored/polleuxlab/inputs/*"
      ]
    },
    {
      "Sid": "Outputfolderwrite",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:DeleteObject"
      ],
      "Resource": [
        "arn:aws:s3:::polleuxmonitored/polleuxlab/results/*",
        "arn:aws:s3:::polleuxmonitored/polleuxlab/logs/*"
      ]
    }
  ]
}